---
/**
 * Final CTA Section
 * Purpose: Close the page with a clear ask.
 * CTAs: Primary (APK) + Secondary A (User Form) + WhatsApp text link
 */

const APK_URL = "https://expo.dev/accounts/abililife-dev/projects/abililife/builds/d0dddb8a-94f7-42e1-93e3-4ccecb1b96ff";
const USER_FORM_URL = "https://forms.gle/4sk1xC5b3FspQGQr5";
const WHATSAPP_URL = "https://wa.me/254742560540";
---

<section class="section bg-brand" aria-labelledby="cta-heading">
  <div class="container">
    <div class="max-w-2xl mx-auto text-center">
      <!-- Headline -->
      <h2 
        id="cta-heading" 
        class="text-2xl md:text-3xl font-bold text-white mb-8"
      >
        Ready to try accessible transport in Nairobi?
      </h2>
      
      <!-- CTAs -->
      <div class="flex flex-col sm:flex-row justify-center gap-4 mb-6">
        <!-- Primary CTA -->
        <a 
          href={APK_URL}
          class="btn bg-white text-brand hover:bg-slate-100"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg 
            class="w-5 h-5" 
            fill="none" 
            stroke="currentColor" 
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              stroke-width="2" 
              d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
            />
          </svg>
          Download the Pilot App
        </a>
        
        <!-- Secondary CTA -->
        <a 
          href={USER_FORM_URL}
          class="btn bg-transparent text-white border-2 border-white hover:bg-white/10"
          target="_blank"
          rel="noopener noreferrer"
        >
          Join User Testing
        </a>
      </div>
      
      <!-- WhatsApp Link -->
      <a 
        href={WHATSAPP_URL}
        class="inline-flex items-center gap-2 text-white/90 hover:text-white transition-colors"
        target="_blank"
        rel="noopener noreferrer"
      >
        <span>Questions? Chat with us on WhatsApp</span>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
        </svg>
      </a>
    </div>
  </div>
</section>

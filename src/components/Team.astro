---
/**
 * Team Section
 * Purpose: Build trust through human faces and credibility.
 * No CTAs in this section.
 */

const team = [
  {
    name: "Kevin Isom",
    role: "Co-Founder & Team Lead",
    bio: "Leads partnerships and business development. Connects AbiliLife with mobility providers and pilot users.",
    image: "/images/team/kevin.jpeg",
    linkedin: "https://linkedin.com/in/kevin-isom"
  },
  {
    name: "Eli Keli",
    role: "Co-Founder & Product Lead",
    bio: "Software engineer building AbiliLife Mobility. Focuses on accessibility and user experience.",
    image: "/images/team/eli.jpeg",
    linkedin: "https://linkedin.com/in/eli-keli"
  },
  {
    name: "Philip Machar",
    role: "Co-Founder & Technical Lead",
    bio: "Frontend developer creating accessible interfaces. Led award-winning projects in disability tech.",
    image: "/images/team/philip.png",
    linkedin: "https://linkedin.com/in/philip-machar"
  },
  {
    name: "Liban Hassan",
    role: "Co-Founder & Relations Manager",
    bio: "Manages community partnerships and engagement. Connects AbiliLife with disability organizations.",
    image: "/images/team/liban.png",
    linkedin: "https://linkedin.com/in/liban-hassan"
  }
];
---

<section class="section bg-white" aria-labelledby="team-heading">
  <div class="container">
    <div class="max-w-4xl mx-auto">
      <!-- Section Title -->
      <h2 
        id="team-heading" 
        class="text-2xl md:text-3xl font-bold text-slate-900 mb-4 text-center"
      >
        The Team
      </h2>
      
      <!-- Intro -->
      <p class="text-lg text-slate-600 mb-12 text-center">
        We're a small team in Nairobi building AbiliLife.
      </p>
      
      <!-- Team Grid -->
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8">
        {team.map((member) => (
          <div class="text-center">
            <!-- Photo -->
            <div class="mb-4">
              <img 
                src={member.image}
                alt={`${member.name}, ${member.role}`}
                class="w-24 h-24 mx-auto rounded-full object-cover bg-slate-200"
                width="96"
                height="96"
                loading="lazy"
              />
            </div>
            
            <!-- Name -->
            <h3 class="font-semibold text-slate-900 mb-1">
              {member.name}
            </h3>
            
            <!-- Role -->
            <p class="text-sm text-brand font-medium mb-2">
              {member.role}
            </p>
            
            <!-- Bio -->
            <p class="text-sm text-slate-600 mb-3">
              {member.bio}
            </p>
            
            <!-- LinkedIn -->
            <a 
              href={member.linkedin}
              class="inline-flex items-center gap-1 text-sm text-slate-500 hover:text-brand transition-colors"
              target="_blank"
              rel="noopener noreferrer"
              aria-label={`${member.name} on LinkedIn`}
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
              LinkedIn
            </a>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

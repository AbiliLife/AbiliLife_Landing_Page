---
/**
 * Pilot Section (includes How to Join sub-section)
 * Purpose: Explain what we're building and testing right now.
 * CTAs: Primary (APK) + Secondary A (User Form)
 */

const APK_URL = "https://expo.dev/accounts/abililife-dev/projects/abililife/builds/d0dddb8a-94f7-42e1-93e3-4ccecb1b96ff";
const USER_FORM_URL = "https://forms.gle/4sk1xC5b3FspQGQr5";
const WHATSAPP_URL = "https://wa.me/254742560540";

const steps = [
  {
    number: "1",
    title: "Tell us your needs",
    description: "Share your wheelchair type, pickup preferences, and any assistance you need. We save this so you don't repeat it."
  },
  {
    number: "2",
    title: "Request a ride",
    description: "Send us your pickup and drop-off locations. We connect you with a partner vehicle."
  },
  {
    number: "3",
    title: "Travel with support",
    description: "Board your wheelchair-accessible vehicle. Share trip details with caregivers via the app."
  }
];

const joinSteps = [
  {
    number: "1",
    title: "Download the app",
    description: "Get the Android APK from our download link. You'll need to allow installation from unknown sources."
  },
  {
    number: "2",
    title: "Fill out the signup form",
    description: "Tell us a bit about yourself so we can support you during the pilot."
  },
  {
    number: "3",
    title: "We'll follow up",
    description: "Our team will reach out to help you get started and answer any questions."
  }
];
---

<section class="section bg-white" aria-labelledby="pilot-heading">
  <div class="container">
    <div class="max-w-4xl mx-auto">
      <!-- Status Badge -->
      <div class="inline-flex items-center gap-2 px-3 py-1.5 mb-6 text-sm font-medium text-amber-800 bg-amber-50 rounded-full">
        <span class="text-base" aria-hidden="true">ðŸ§ª</span>
        Currently in pilot phase â€” Nairobi, Kenya
      </div>
      
      <!-- Section Title -->
      <h2 
        id="pilot-heading" 
        class="text-2xl md:text-3xl font-bold text-slate-900 mb-4"
      >
        How AbiliLife Mobility Works
      </h2>
      
      <!-- Intro -->
      <p class="text-lg text-slate-600 mb-10">
        We're building a simple way to request accessible rides. Here's how it works:
      </p>
      
      <!-- Steps -->
      <div class="grid md:grid-cols-3 gap-8 mb-12">
        {steps.map((step) => (
          <div class="relative">
            <div class="flex items-center justify-center w-10 h-10 mb-4 text-lg font-bold text-white bg-brand rounded-full">
              {step.number}
            </div>
            <h3 class="text-lg font-semibold text-slate-900 mb-2">
              {step.title}
            </h3>
            <p class="text-slate-600">
              {step.description}
            </p>
          </div>
        ))}
      </div>
      
      <!-- CTAs -->
      <div class="flex flex-col sm:flex-row gap-4 mb-16">
        <a 
          href={APK_URL}
          class="btn btn-primary"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg 
            class="w-5 h-5" 
            fill="none" 
            stroke="currentColor" 
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              stroke-width="2" 
              d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
            />
          </svg>
          Download the Pilot App
        </a>
        <a 
          href={USER_FORM_URL}
          class="btn btn-secondary"
          target="_blank"
          rel="noopener noreferrer"
        >
          Join User Testing
        </a>
      </div>
      
      <!-- Divider -->
      <hr class="border-slate-200 mb-12" />
      
      <!-- How to Join Sub-Section -->
      <div id="how-to-join">
        <h3 class="text-xl md:text-2xl font-bold text-slate-900 mb-4">
          How to Join
        </h3>
        
        <p class="text-slate-600 mb-8">
          Getting started takes 3 steps:
        </p>
        
        <!-- Join Steps -->
        <div class="space-y-6 mb-8">
          {joinSteps.map((step) => (
            <div class="flex gap-4">
              <div class="flex-shrink-0 flex items-center justify-center w-8 h-8 text-sm font-bold text-brand bg-blue-50 rounded-full">
                {step.number}
              </div>
              <div>
                <h4 class="font-semibold text-slate-900 mb-1">
                  {step.title}
                </h4>
                <p class="text-slate-600">
                  {step.description}
                </p>
              </div>
            </div>
          ))}
        </div>
        
        <!-- Helper Text -->
        <p class="text-sm text-slate-500">
          Android only â€¢ Manual install required â€¢ 
          <a 
            href={WHATSAPP_URL}
            class="text-brand hover:underline"
            target="_blank"
            rel="noopener noreferrer"
          >
            Need help? Chat with us on WhatsApp
          </a>
        </p>
      </div>
    </div>
  </div>
</section>
